{
  "name": "omni-twin",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "npm@11.6.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "validate:commands": "node scripts/validate-command-specs.mjs",
    "validate:command-deps": "node scripts/validate-command-dependencies.mjs",
    "validate:technique-links": "node scripts/validate-technique-track-links.mjs",
    "validate:agent-framework": "npm run validate:commands && npm run validate:command-deps && npm run validate:technique-links"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "turbo": "^2.8.3",
    "typescript": "^5.5.4"
  }
}
